/**
 * + Typo
 * =====================================================================
 */

font-family = {
    sans-serif: LatoWeb\, Lato\, Frutiger\, "Frutiger Linotype"\, Univers\, Calibri\, "Gill Sans"\, "Gill Sans MT"\, "Myriad Pro"\, Myriad\, "DejaVu Sans Condensed"\, "Liberation Sans"\, "Nimbus Sans L"\, Tahoma\, Geneva\, "Helvetica Neue"\, Helvetica\, Arial\, sans-serif,
    monospace: MesloWeb\, Meslo\, Menlo\, Consolas\, Monaco\, Lucida Console\, Liberation Mono\, DejaVu Sans Mono\, Bitstream Vera Sans Mono\, Courier New\, monospace\, serif,
    champagne: ChampagneLimousines\, sans-serif
}

colors= {
    black: #212325,
    white: #f6f8fa,
    link: #BA5A17
}


line-height = {
    normal: (24 / 14),
    small: (24 / 14 * .85),
    large: (24 / 14 * 1.25)
}

/* = Typo */


/**
 * + Images
 * =====================================================================
 */

images = {
    logo-electroc: {
        data-uri: inline-url('logo-electroc.svg'),
        size: image-size('logo-electroc.svg'),
        ratio: 0
    },
    logo-studiou: {
        data-uri: inline-url('logo-studiou.svg'),
        size: image-size('logo-studiou.svg'),
        ratio: 0
    },
    logo-pixlsys: {
        data-uri: inline-url('logo-pixlsys.svg'),
        size: image-size('logo-pixlsys.svg'),
        ratio: 0
    }
}

for key, image in images
    image.ratio = remove-unit(image.size[0] / image.size[1])

/* = Images */


/**
 * + Mediaquery breakpoints
 * =====================================================================
 */

breakpoints = {
    xs: {
        min: 0,
        max: 479px
    },
    xsl: {
        min: 480px,
        max: 767px
    },
    sm: {
        min: 768px,
        max: 991px
    },
    md: {
        min: 992px,
        max: 1199px
    },
    lg: {
        min: 1200px,
        max: 1599px
    },
    xl: {
        min: 1600px,
        max: 0
    }
}

/* = Mediaquery breakpoints */


/**
 * + Responsive helpers
 * =====================================================================
 */

responsive-visibility__placeholders_only = true

/* = Responsive helpers */


/**
 * + Grid config
 * =====================================================================
 */

grid-breakpoints = {}

for key, value in breakpoints
    grid-breakpoints[key] = value.min

grid-config = {
    placeholders-only: true,
    column-count: 24,
    gutter-width: 30px,
    breakpoints: grid-breakpoints
}

/* = Grid config */
