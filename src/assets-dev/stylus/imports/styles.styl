.contact-container
    @extends $content-container

.contact-row
    @extends $row

.contact-address,
.contact-items
    @extends $col-xs-24, $col-xsl-12

.contact-item
    + .contact-item
        margin-top: grid-config.gutter-width

.contact-item__link
    @extends $btn

    &::before
        @extends $icon

    &.is-mail::before
        @extends $icon-github

    &.is-phone::before
        @extends $icon-github

.link-home
    @extends $logo-text
    font-size: 24px
