html
    background: colors.background

body
    improved-text-rendering()
    font-family: font-family.sans-serif
    line-height: line-height.normal
    font-size: 16px
    color: colors.foreground


a
    text-decoration: none
    color: colors.link

    &:hover
        text-decoration: underline

.site-header,
.site-footer,
main
    padding: (grid-config.gutter-width / 2)

$img-responsive
    display: block
    max-width: 100%
    height: auto


.logo
    width: 300px;

    &::before
        display: block;
        content: '';
        width: 100%;
        padding-bottom: (100% / images.logo.ratio);
        background: images.logo.dataUri center center no-repeat;
        background-size: cover

.logo-text
    &,
    &--pseudo::before
        font-family: font-family.champagne
        font-weight: normal
        font-size: 24px
    &--pseudo::before
        content: 'electroC'
        display: inline

.avatar
    border-radius: 50%
    overflow: hidden
    width: 80px
    height: auto

    +mq-bp(xsl)
        width: 100px

    +mq-bp(sm)
        width: 120px

    +mq-bp(md)
        width: 160px

    +mq-bp(lg)
        width: 200px

    +mq-bp(xl)
        width: 240px


.avatar__img
    @extends $img-responsive

