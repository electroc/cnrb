html
    background: colors.background

body
    improved-text-rendering()
    font-family: font-family.sans-serif
    line-height: line-height.normal
    font-size: 16px
    color: colors.foreground


a
    text-decoration: none
    color: colors.link

    &:hover
        text-decoration: underline

$img-responsive
    display: block
    max-width: 100%
    height: auto

// .site-header

// .site-title

.page-section
    padding: (grid-config.gutter-width / 2)

//     &--contact

.logo
    width: 300px;

    +mq-bp(xsl)
        width: 420px

    +mq-bp(sm)
        width: 480px

    +mq-bp(md)
        width: 540px

    +mq-bp(lg)
        width: 620px

    &::before
        display: block;
        content: '';
        width: 100%;
        padding-bottom: (100% / images.logo.ratio);
        background: images.logo.dataUri center center no-repeat;
        background-size: cover

.avatar
    border-radius: 50%
    overflow: hidden
    width: 80px
    height: auto

    +mq-bp(xsl)
        width: 100px

    +mq-bp(sm)
        width: 120px

    +mq-bp(md)
        width: 160px

    +mq-bp(lg)
        width: 200px

    +mq-bp(xl)
        width: 240px


.avatar__img
    @extends $img-responsive

