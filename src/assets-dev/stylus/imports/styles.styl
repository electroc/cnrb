$text-sans
    font-family: font-family.sans-serif

$text-mono
    font-family: font-family.monospace

$text-champagne
    font-family: font-family.champagne

$logo-text
    @extends $text-champagne
    font-weight: normal

$logo-text--pseudo
    @extends $logo-text
    content: 'electroC'
    display: inline

$logo-img
    width: 100%
    max-width: unit(images.logo.size[0], 'px');

    &::before
        display: block;
        content: '';
        width: 100%;
        padding-bottom: (100% / images.logo.ratio);
        background: images.logo.dataUri center center no-repeat;
        background-size: cover

$img-responsive
    display: block
    max-width: 100%
    height: auto

html
    background: #bada55

body
    @extends $text-mono
    improved-text-rendering()
    padding: (grid-config.gutter-width / 2)
    max-width: 940px;
    margin: 0 auto;
    background: colors.background
    line-height: line-height.normal
    color: colors.foreground
    font-size: 14px
    +mq-bp(md, min)
        font-size: 16px

a
    text-decoration: none
    color: colors.link

    &:hover
        text-decoration: underline

.row
    @extends $row
    +mq-bp(xsl, min)
        display: flex
        align-items: stretch

.site-title,
.site-avatar
    @extends $col-xs-24, $col-xsl-12
    +mq-bp(xsl, min)
        display: flex
        justify-content: center
        flex-direction: column


.site-title
    @extends $text-mono
    font-size: 16px
    text-align: center
    margin: 1em auto 1.5em

    +mq-bp(xsl)
        font-size: (16px / 3 * 3.5)
    +mq-bp(sm)
        font-size: (16px / 3 * 4)
    +mq-bp(md, min)
        font-size: (16px / 3 * 5)

    &::before
        @extends $logo-text--pseudo
        line-height: 1
        font-size: 3em;
        display: block
        margin: 0 auto .2em auto


.avatar
    border-radius: 50%
    overflow: hidden
    height: auto
    margin: 0 auto 30px auto
    width: 100%
    max-width: 180px
    +mq-bp(xsl)
        max-width: 210px
    +mq-bp(xsl, min)
        margin-top: 30px
    +mq-bp(sm)
        max-width: 240px
    +mq-bp(md, min)
        max-width: 300px

.avatar__img
    @extends $img-responsive

$boxed-container
    margin: (grid-config.gutter-width / 2) auto (grid-config.gutter-width / 2) auto
    width: 80%

    +mq-bp(md, min)
        width: 66%

.msg-welcome
    @extends $boxed-container

.headline
    @extends $boxed-container
    font-weight: 700
    text-transform: uppercase

    &::before
        content: '#'
        display: inline-block
        margin-right: .45em

