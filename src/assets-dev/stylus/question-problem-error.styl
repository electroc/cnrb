@require 'variables'

@require 'collection/main'

@require 'typo'
@require 'global'

body
    background: colors.black
    color: colors.white
    font-family: font-family.champagne
    font-size: 16px
    line-height: line-height-normal

a
    color: colors.white
    text-decoration:none

    &:hover
        color:#fcf

.logo
    svg
        width: 100%
        height: 100%
        g path
            fill: colors.white

.logo--studiou
    width: 100px
    height: (@width / images.logo-studiou.ratio)

.logo--pixlsys
    height: 100px
    width: (@height * images.logo-pixlsys.ratio)

.logo__link
    display: block
    width: 100%
    height: 100%




#text-flicker
    font-size:1.1em
