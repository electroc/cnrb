@font-face
    font-family: 'EuroCaps'
    src: url('../fonts/eurocaps/eurocaps.eot')
    src: url('../fonts/eurocaps/eurocaps.eot?#iefix') format('embedded-opentype'),
         url('../fonts/eurocaps/eurocaps.woff') format('woff'),
         url('../fonts/eurocaps/eurocaps.ttf') format('truetype'),
         url('../fonts/eurocaps/eurocaps.svg#euro_capsregular') format('svg')

html, body, h1, h2
    margin:0
    padding:0

body
    background:#111
    color:#f0f0f0
    font-family: EuroCaps, "Lucida Grande", "Lucida Sans Unicode", "Lucida Sans", Geneva, Verdana, sans-serif
    font-size:12px
    line-height:1em
    overflow:hidden

a,
a:link,
a:hover,
a:visited,
a:active
    color:#f0f0f0
    text-decoration:none

a:hover
    color:#fcf

header
    box-sizing: border-box
    height:1.5em
    min-height:26px
    padding: .3em 0 0 .3em

h1, h2, p
    margin:0 0 0 .3em
    padding:0
    white-space:nowrap
    font-size:1em
    font-weight:normal

h1
    margin: 0
    font-size:20px
    line-height:20px
    letter-spacing:.1em
