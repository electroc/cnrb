extends base.jade

block content
    header.site-header.page-section.page-section--header

        .header-row

            h1.site-title
                span.name #{cnrb.name}

            .site-avatar
                figure.avatar
                    img.avatar__img(src="#{fn.gravatar(600)}" alt="#{cnrb.name}" title="#{cnrb.name}")

    main.site-main

        section.page-section.page-section--welcome

            .page-section__content
                p.msg-welcome #{msg_welcome}
                | !{contents}


        section.page-section.page-section--info

            .info-items
                ul.info-items__container
                    li.info-item
                        a.info-item__link.is-cv(href="/files/lebenslauf.pdf" title="Lebenslauf von #{cnrb.name}")
                            span.info-item__label Lebenslauf
                    li.info-item
                        a.info-item__link.is-projects(href="/files/referenzen.pdf" title="Referenzen von #{cnrb.name}")
                            span.info-item__label Referenzen
                    li.info-item
                        a.info-item__link.is-linkedin(href="/files/referenzen.pdf" title="#{cnrb.name} @ linkedin")
                            span.info-item__label linkedin
                    li.info-item
                        a.info-item__link.is-xing(href="/files/referenzen.pdf" title="#{cnrb.name} @ Xing")
                            span.info-item__label Xing


        section.page-section.page-section--projects

            .headline-container
                h2#referenzen.headline referenzen

            ul.project-list

                each project in projects

                    li.project-list__item
                        .project
                            h3.project__title #{project.title}
                            p.project__year #{project.year}
                            p.project__description #{project.description}
                            .project__contents !{project.contents}

                            if project.links
                                ul.project__links
                                    each link in project.links
                                        li.project-link
                                            a.project-link__link(href="#{link.url}") #{link.title}

                            if project.images
                                ul.project__images
                                    each image in project.images
                                        li.project-image
                                            figure.project-image__figure
                                                a.project-image__link(href="/assets/img/projects/#{image.bigUrl}")
                                                    img.project-image__img(src="/assets/img/projects/#{image.thumbnailUrl}", alt="#{image.caption}")

        section.page-section.page-section--contact

            .headline-container
                h2#kontakt.headline Kontakt

            .contact-container

                .contact-row

                    address.contact-address
                        | <strong>#{cnrb.name}</strong><br>
                        | !{cnrb.address.replace(/[\n\r]+/, '<br>') + '<br>'}
                        | #{cnrb.zip} #{cnrb.city}

                    ul.contact-items
                        li.contact-item
                            a.contact-item__link.is-mail(href="mailto:#{cnrb.email}" title="E-Mail an #{cnrb.name}") #{cnrb.email}
                        li.contact-item
                            a.contact-item__link.is-phone(href="tel:#{cnrb.phone}") #{cnrb.phone_formatted}

    footer.site-footer

        .footer-container

            a.link-home(href="#{siteUrl}", rel="bookmark") electroC

    .background-texture
